@model HomeAgency.Domain.Entities.VillaNumber
@{
    ViewData["Title"] = "Create Number";
}

<h1>Create</h1>


<div class="card w-100 p-4">
    <div class="card-header bg-success bg-gradient py-3">
        <div class="text-center">
            Create new  Vialla
        </div>
    </div>
    <div class="card-body p-4">
        <div asp-validation-summary="ModelOnly" class="mb-2 text-danger"></div>
        <form method="post">
            <div class="mb-3 form-floating">
                <input asp-for="VillaId" class="form-control"/>
                <label asp-for="VillaId"></label>
                <span class="text-danger" asp-validation-for="VillaId"></span>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="Villa_Number" class="form-control" />
                <label asp-for="Villa_Number"></label>
                <span class="text-danger" asp-validation-for="Villa_Number"></span>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="Specialities" class="form-control" />
                <label asp-for="Specialities"></label>
                <span class="text-danger" asp-validation-for="Specialities"></span>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add
            </button>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="VillaNumber">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

