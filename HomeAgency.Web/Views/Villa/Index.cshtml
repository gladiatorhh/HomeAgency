@model IEnumerable<HomeAgency.Domain.Entities.Villa>

@{
    ViewData["Title"] = "Villas";
}

<h1>Villas list</h1>

<div class="card w-100 p-4">
    <div class="card-header bg-success bg-gradient py-3">
        <div class="text-center">
            All Viallas
        </div>
    </div>
    <div class="card-body p-4">
        <a asp-action="Create" asp-controller="Villa" class="btn btn-secondary m-2">
            <i class="bi bi-plus-circle"></i> Add new villa
        </a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Sqft</th>
                    <th>Ocupancy</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var villa in Model)
                {
                    <tr>
                        <td>@villa.Name</td>
                        <td>@villa.Price</td>
                        <td>@villa.Sqft</td>
                        <td>@villa.Occupancy</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Update" asp-controller="Villa" asp-route-villaId="@villa.Id" class="btn btn-success">
                                    <i class="bi bi-pencil-fill"></i> Update
                                </a>
                                <a asp-action="Delete" asp-controller="Villa" asp-route-villaId="@villa.Id" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
