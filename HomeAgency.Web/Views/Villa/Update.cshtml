@model HomeAgency.Domain.Entities.Villa
@{
    ViewData["Title"] = "Update villa";
}

<h1>Update</h1>


<div class="card w-100 p-4">
    <div class="card-header bg-success bg-gradient py-3">
        <div class="text-center">
            Update vialla
        </div>
    </div>
    <div class="card-body p-4">
        <div asp-validation-summary="ModelOnly" class="mb-2 text-danger"></div>
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3 form-floating">
                <input asp-for="Name" class="form-control" />
                <label asp-for="Name"></label>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="Description" class="form-control" />
                <label asp-for="Description"></label>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="Price" class="form-control" />
                <label asp-for="Price"></label>
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="Sqft" class="form-control" />
                <label asp-for="Sqft"></label>
                <span class="text-danger" asp-validation-for="Sqft"></span>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="Occupancy" class="form-control" />
                <label asp-for="Occupancy"></label>
                <span class="text-danger" asp-validation-for="Occupancy"></span>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="ImageUrl" class="form-control" />
                <label asp-for="ImageUrl"></label>
                <span class="text-danger" asp-validation-for="ImageUrl"></span>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-pencil-fill"></i> Update
            </button>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Villa">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
