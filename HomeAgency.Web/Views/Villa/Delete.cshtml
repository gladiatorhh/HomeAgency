@model HomeAgency.Domain.Entities.Villa
@{
    ViewData["Title"] = "Delet villa";
}

<h1>Delet</h1>


<div class="card w-100 p-4">
    <div class="card-header bg-success bg-gradient py-3">
        <div class="text-center">
            Delete vialla
        </div>
    </div>
    <div class="card-body p-4">
        <div asp-validation-summary="ModelOnly" class="mb-2 text-danger"></div>
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3 form-floating">
                <input asp-for="Name" disabled class="form-control" />
                <label asp-for="Name"></label>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="Description" class="form-control" />
                <label asp-for="Description"></label>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="Price" disabled class="form-control" />
                <label asp-for="Price"></label>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="Sqft" disabled class="form-control" />
                <label asp-for="Sqft"></label>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="Occupancy" disabled class="form-control" />
                <label asp-for="Occupancy"></label>
            </div>
            <div class="mb-3 form-floating">
                <input asp-for="ImageUrl" disabled class="form-control" />
                <label asp-for="ImageUrl"></label>
            </div>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Delete
            </button>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Villa">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
